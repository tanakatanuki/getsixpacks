<!DOCTYPE html>
<html>
  <head>
    <title>Sixpacks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header class="top-header">
  		<div class="container">
  			<div class="row">
  				<div class="col-md-8 col-md-offset-1 col-xs-7">
            <nav class="navbar navbar-inverse navbar-fixed-top">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                    <span class="sr-only">Bootstrap</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                  <%= link_to "GetSixPacks", all_users_recipes_path , class: "navbar-brand" %>
                </div>
                
                <div id="gnavi" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                  <!--ログインの有無でメニュー変化-->
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to "マイページ", user_recipes_path(current_user.id) %>
                    </li>
                    <li>
                      <%= link_to "レシピ投稿", new_user_recipe_path(current_user.id) %>
                    </li>
                    <li>
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to "新規登録", new_user_registration_path %>
                    </li>
                    <li>
                      <%= link_to "ログイン", new_user_session_path %>
                    </li>
                  <% end %>
                  </ul>
                </div>
              </div>
            </nav>
					</div>
				</div>
			</div>
		</header>
		
    <!--
    flash message
    -->
		<% flash.each do |key, message| %>
      <div class="alert alert-<%= key %>">
        <%= message %>
      </div>
    <% end %>

    <!--<% if notice %>-->
    <!--  <p><%= notice %></p>-->
    <!--<% end %>-->
    
    <!--<% if alert %>-->
    <!--  <p><%= alert %></p>-->
    <!--<% end %>-->
    
    
    <!--本体-->
    <%= yield %>
    
  	<div class="footer navbar navbar-inverse">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">&copy; Copyright TanakaMotoki 2018</div>
					<div class="col-xs-6 text-right">@DiveIntoCode</div>
				</div>
			</div>
		</div><!-- #footer -->


  </body>
</html>
